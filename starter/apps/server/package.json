{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "wrangler deploy --dry-run",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "wrangler dev --port=3000",
		"start": "wrangler dev",
		"deploy": "wrangler deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings"
	},
	"dependencies": {
		"@hono/trpc-server": "^0.4.0",
		"@trpc/client": "^11.7.1",
		"@trpc/server": "^11.7.1",
		"dotenv": "^17.2.3",
		"hono": "^4.10.4",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@types/node": "^22.19.0",
		"tsdown": "^0.14.2",
		"typescript": "^5.9.3",
		"wrangler": "^4.46.0"
	}
}
